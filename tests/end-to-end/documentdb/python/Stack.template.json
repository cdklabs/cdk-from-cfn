{
 "Resources": {
  "DBCluster": {
   "Type": "AWS::DocDB::DBCluster",
   "Properties": {
    "DBClusterIdentifier": "MyCluster",
    "EngineVersion": "4.0.0",
    "MasterUserPassword": "password",
    "MasterUsername": "MainUser"
   },
   "DeletionPolicy": "Delete"
  },
  "DBInstance": {
   "Type": "AWS::DocDB::DBInstance",
   "Properties": {
    "DBClusterIdentifier": {
     "Ref": "DBCluster"
    },
    "DBInstanceClass": "db.t3.medium",
    "DBInstanceIdentifier": "MyInstance"
   },
   "DependsOn": [
    "DBCluster"
   ]
  }
 },
 "Outputs": {
  "ClusterId": {
   "Value": {
    "Ref": "DBCluster"
   }
  },
  "ClusterEndpoint": {
   "Value": {
    "Fn::GetAtt": [
     "DBCluster",
     "Endpoint"
    ]
   }
  },
  "ClusterPort": {
   "Value": {
    "Fn::GetAtt": [
     "DBCluster",
     "Port"
    ]
   }
  },
  "EngineVersion": {
   "Value": "4.0.0"
  }
 }
}