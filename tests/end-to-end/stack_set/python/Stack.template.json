{
 "Resources": {
  "StackSetResourceRole": {
   "Type": "AWS::IAM::Role",
   "Properties": {
    "AssumeRolePolicyDocument": {
     "Version": "2012-10-17",
     "Statement": [
      {
       "Effect": "Allow",
       "Principal": {
        "Service": "lambda.amazonaws.com"
       },
       "Action": "sts:AssumeRole"
      }
     ]
    },
    "Path": "/",
    "Policies": [
     {
      "PolicyDocument": {
       "Version": "2012-10-17",
       "Statement": [
        {
         "Effect": "Allow",
         "Action": "iam:PassRole",
         "Resource": "*"
        }
       ]
      },
      "PolicyName": "IAMPassRolePermissions"
     },
     {
      "PolicyDocument": {
       "Version": "2012-10-17",
       "Statement": [
        {
         "Effect": "Allow",
         "Action": "cloudformation:*",
         "Resource": "*"
        }
       ]
      },
      "PolicyName": "CloudFormationPermissions"
     },
     {
      "PolicyDocument": {
       "Version": "2012-10-17",
       "Statement": [
        {
         "Effect": "Allow",
         "Action": "logs:CreateLogGroup",
         "Resource": [
          {
           "Fn::Join": [
            "",
            [
             "arn:aws:logs:",
             {
              "Ref": "AWS::Region"
             },
             ":",
             {
              "Ref": "AWS::AccountId"
             },
             ":*"
            ]
           ]
          }
         ]
        },
        {
         "Effect": "Allow",
         "Action": [
          "logs:CreateLogStream",
          "logs:PutLogEvents"
         ],
         "Resource": [
          {
           "Fn::Join": [
            "",
            [
             "arn:aws:logs:",
             {
              "Ref": "AWS::Region"
             },
             ":",
             {
              "Ref": "AWS::AccountId"
             },
             ":log-group:/aws/lambda/*"
            ]
           ]
          }
         ]
        }
       ]
      },
      "PolicyName": "LambdaPermissions"
     },
     {
      "PolicyDocument": {
       "Version": "2012-10-17",
       "Statement": [
        {
         "Effect": "Allow",
         "Action": [
          "s3:Get*",
          "s3:List*"
         ],
         "Resource": "*"
        }
       ]
      },
      "PolicyName": "S3Permissions"
     }
    ]
   }
  }
 }
}